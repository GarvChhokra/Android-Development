<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/pre"
        android:layout_width="122dp"
        android:layout_height="57dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="84dp"
        android:onClick="previous"
        android:text="@string/previous"
        android:textSize="15sp"
        app:cornerRadius="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text" />

    <Button
        android:id="@+id/nxt"
        android:layout_width="108dp"
        android:layout_height="57dp"
        android:layout_marginEnd="68dp"
        android:onClick="next"
        android:text="@string/next"
        android:textSize="16sp"
        app:cornerRadius="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pre" />

    <ImageView
        android:id="@+id/pic0"
        android:layout_width="393dp"
        android:layout_height="259dp"
        android:layout_marginTop="52dp"
        android:padding="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ig1" />

    <ImageView
        android:id="@+id/pic1"
        android:layout_width="393dp"
        android:layout_height="259dp"
        android:layout_marginTop="52dp"
        android:padding="5sp"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ig2" />

    <ImageView
        android:id="@+id/pic2"
        android:layout_width="393dp"
        android:layout_height="259dp"
        android:layout_marginTop="52dp"
        android:padding="5sp"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ig3" />

    <ImageView
        android:id="@+id/pic3"
        android:layout_width="393dp"
        android:layout_height="259dp"
        android:layout_marginTop="52dp"
        android:padding="5sp"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ig4" />

    <ImageView
        android:id="@+id/pic4"
        android:layout_width="393dp"
        android:layout_height="259dp"
        android:layout_marginTop="52dp"
        android:padding="5sp"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ig5" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:text="@string/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pic1" />
</androidx.constraintlayout.widget.ConstraintLayout>